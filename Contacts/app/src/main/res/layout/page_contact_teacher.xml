<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblFirstNameTeacher"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:text="first name"/>

    <TextView
        android:id="@+id/lblLastNameTeacher"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:text="last name"/>

    <ImageView
        android:id="@+id/imgPersonPictureTeacher"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/person1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lblFirstNameTeacher"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnEditTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Contact"
        android:layout_marginTop="10dp"
        android:layout_below="@id/imgPersonPictureTeacher"
        android:layout_alignRight="@+id/imgPersonPictureTeacher"/>

</RelativeLayout>